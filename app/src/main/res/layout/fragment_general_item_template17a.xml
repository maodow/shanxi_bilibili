<?xml version="1.0" encoding="utf-8"?>
<tv.huan.bilibili.widget.template17.Template171LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    android:orientation="vertical">

    <!-- up -->
    <tv.huan.bilibili.widget.common.CommonRoundRelativeLayout
        android:id="@+id/general_item_template17a_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:focusable="true"
        app:rl_rate_height="0.56">

        <include
            layout="@layout/common_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </tv.huan.bilibili.widget.common.CommonRoundRelativeLayout>

    <!-- down -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:orientation="vertical">

        <!-- item1 -->
        <lib.kalu.leanback.round.RoundLinearLayout
            android:id="@+id/general_template17a_item1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_common_template20_reca"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:visibility="gone"
            app:rl_scale="1.1">

            <lib.kalu.leanback.marquee.MarqueeTextView
                android:id="@+id/general_template17a_item1_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_weight="1"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/general_template17a_item1_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_3"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_11" />

        </lib.kalu.leanback.round.RoundLinearLayout>

        <!-- item2 -->
        <lib.kalu.leanback.round.RoundLinearLayout
            android:id="@+id/general_template17a_item2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_common_template20_recb"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:visibility="gone"
            app:rl_scale="1.1">

            <lib.kalu.leanback.marquee.MarqueeTextView
                android:id="@+id/general_template17a_item2_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_weight="1"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/general_template17a_item2_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_3"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_11" />

        </lib.kalu.leanback.round.RoundLinearLayout>

        <!-- item3 -->
        <lib.kalu.leanback.round.RoundRelativeLayout
            android:id="@+id/general_template17a_item3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_common_template20_alla"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:gravity="center"
            app:rl_scale="1.1">

            <lib.kalu.leanback.plus.TextViewPlus
                android:id="@+id/general_template17a_item3_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_selector_common_rec"
                android:drawablePadding="@dimen/dp_13"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/template_rec"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:tvp_drawable_top_height="@dimen/dp_44"
                app:tvp_drawable_top_width="@dimen/dp_44" />

            <TextView
                android:id="@+id/general_template17a_item3_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/template_rec"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

        </lib.kalu.leanback.round.RoundRelativeLayout>

    </LinearLayout>

</tv.huan.bilibili.widget.template17.Template171LinearLayout>
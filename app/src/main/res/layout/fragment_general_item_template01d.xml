<?xml version="1.0" encoding="utf-8"?>
<tv.huan.bilibili.widget.template1.Template1LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selector_template17e"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    app:rl_corner_bottom_right="@dimen/dp_6"
    app:rl_scale="1.06">

    <TextView
        android:id="@+id/album_item_template01_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/album_item_template01_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="top|left"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_11"
        android:visibility="gone" />

</tv.huan.bilibili.widget.template1.Template1LinearLayout>